<?xml version="1.0" encoding="UTF-8"?>
<LightningComponentBundle xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>59.0</apiVersion>
    <isExposed>true</isExposed>
    <masterLabel>B2B Product Carousel</masterLabel>
    <description>Carousel of featured products that can be configured in the Experience Builder</description>
    <targets>
        <target>lightningCommunity__Page</target>
        <target>lightningCommunity__Page_Layout</target>
        <target>lightningCommunity__Theme_Layout</target>
        <target>lightningCommunity__Default</target>
    </targets>
    <targetConfigs>
        <targetConfig targets="lightningCommunity__Default">
            <property
                name="categoryType"
                type="String"
                label="Category Type"
                description="Select the category type to upload"
                datasource="All"
                default="All"
            />
            <property
                name="productCategoryName"
                type="String"
                label="Product Category"
                description="Product Category to Display"
                datasource="apex://ProductCategoryPicklist"
            />
            <property
                name="showDetailImage"
                type="Boolean"
                label="Show Detail Image"
                default="false"
            />
            <property
                name="showPrices"
                type="Boolean"
                label="Show Prices"
                default="false"
            />
            <property
                name="sliderSpeed"
                type="String"
                label="Slider Speed"
                description="Set the speed to move images"
                datasource="2,3,4,5,6,7, Deactivated"
                default="Deactivated"
            />
            <property
                name="itemsBySlideDesktop"
                type="String"
                label="Items Number By Slide (Desktop)"
                datasource="1,2,3,4,5,6"
                default="3"
            />
            <property
                name="itemsBySlideMobile"
                type="String"
                label="Items Number By Slide (Mobile)"
                datasource="1,2,3"
                default="1"
            />
            <property
                name="desktopHeight"
                type="String"
                label="Desktop Height"
                description="Component height (desktop)"
                default="400px"
            />
            <property
                name="desktopWidth"
                type="String"
                label="Desktop Width"
                description="Component width (desktop)"
                default="200px"
            />
            <property
                name="mobileHeight"
                type="String"
                label="Mobile Height"
                description="Component height (mobile)"
                default="180px"
            />
            <property
                name="mobileWidth"
                type="String"
                label="Mobile Width"
                description="Component width (mobile)"
                default="90px"
            />
        </targetConfig>
    </targetConfigs>
</LightningComponentBundle>